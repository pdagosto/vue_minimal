{
    "env": { 
        "jest": true
    },
    "globals": {
        "done": true
    },
    rules: {
        'indent': [2,4],
        "no-regex-spaces": 0,
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-multi-spaces": "off",
        //        "no-trailing-spaces": "off",
        "space-before-function-paren": "off",
        "space-unary-ops": "off"        
    }
}
